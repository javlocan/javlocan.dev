---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import Landing from "../islands/Landing.astro";
import About from "../islands/About.astro";
import Contact from "../islands/Contact.astro";
---

<Layout title="javlocan.dev">
  <header>
    <NavBar />
  </header>
  <main>
    <Landing />
    <div id="chivato" class="chivato"></div>
    <About />
  </main>
  <footer>
    <Contact />
  </footer>
</Layout>

<style>
  main {
    position: relative;
    min-height: 400vh;
  }
  header {
    position: fixed;
    top: 0;
    z-index: 9999;
  }
  footer {
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
