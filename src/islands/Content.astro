---

const resT = await fetch(`http://${import.meta.env.VITE_PUBLIC_VERCEL_URL}/data/Tech.json`);
const dataT = await resT.json();
const resS = await fetch(`http://${import.meta.env.VITE_PUBLIC_VERCEL_URL}/data/Skills.json`);
const dataS = await resS.json();
---
<script>
  
</script>
<section class="container">
  <div class="skills" id="skills">
    <h2>{dataS?.header}</h2>

    <div class="list">
      {
        dataS?.content.map((item) => (
          <ul>
            <h4>{item.title}</h4>
            {item.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        ))
      }
    </div>
  </div>
  <div class="tech" id="tech">
    <h2>{dataT?.header}</h2>

    <div class="list">
      {
        dataT?.content.map((item) => (
          <ul>
            <h4>{item.title}</h4>
            {item.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        ))
      }
    </div>
  </div>
  <div class="projects" id="projects">
    <h2>Projects</h2>
  </div>
</section>

<style>
  .container {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    gap: 6rem;

    padding: 8rem 3rem;

    color: white;
    background: rgba(var(--clr-bg-dark), 0.3);
    box-shadow: 0px 0px 100px rgba(0, 0, 0, 0.1);
    z-index: 99;
  }
  .container h2 {
    text-align: center;
    padding-bottom: 3rem;
  }
  .list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    gap: 1rem;
    padding: 2rem;

    border-radius: 12px;
    background: rgba(var(--clr-bg-med), 0.8);
  }

  .list ul {
    width: 100%;
    text-align: center;
    font-size: 0.9rem;
    list-style: none;
    line-height: 2em;
  }

  .list h4 {
    margin-bottom: 0.75rem;
    text-decoration: underline;
  }

  @media screen and (min-width: 500px) {
    .list {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
    .list ul {
      width: auto;
      text-align: left;
    }
  }

  @media screen and (min-width: 1000px) {
    .list {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
      padding: 2.5rem;
      gap: 1.5rem;
    }
  }
</style>
